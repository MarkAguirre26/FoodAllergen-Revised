<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotAllowedIngredientsForFamily">

    <RelativeLayout
        android:id="@+id/toolbar_NotAllowedEngridientsForFamily"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp">

        <TextView
            android:id="@+id/toolbar_title_checkAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="Toolbar"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontsize_titlepage" />

        <ImageView
            android:id="@+id/toolbar_btn_left"
            android:layout_width="@dimen/size_button_small"
            android:layout_height="@dimen/size_button_small"
            android:layout_margin="5dp"
            android:onClick="backClicked"
            android:src="@mipmap/icon_back" />


    </RelativeLayout>


    <include
        android:id="@+id/con_result_preview"
        layout="@layout/con_preview_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>