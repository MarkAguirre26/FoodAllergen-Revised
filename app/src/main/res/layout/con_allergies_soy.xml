<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_container"
    android:orientation="vertical"
    android:padding="@dimen/padding_screen"
    android:background="@color/colorWhite">

    <CheckBox
        android:id="@+id/cbAllergy_Soy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soy_allergy"
        android:textSize="@dimen/fontsize_default"
        android:textColor="@color/colorGreenDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_screen">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/soyinfo"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edamame"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miso"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soymilk"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soy Nuts"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamari"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoyu"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teriyaki"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tofu"
            android:textSize="@dimen/fontsize_small"/>
        <CheckBox
            android:id="@+id/cbAllergy_Soy_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soybeans"
            android:textSize="@dimen/fontsize_small"/>
    </LinearLayout>
</LinearLayout>