<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="none"
    android:background="@color/colorBlack50">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:datePickerMode="spinner"
        android:calendarViewShown="false" />

    <Button
        android:id="@+id/btnDonePickDate"
        android:onClick="OnClick_DonePickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/datePicker"
        android:layout_alignEnd="@id/datePicker"
        android:layout_below="@id/datePicker"
        android:background="@drawable/bg_accent"
        android:text="@string/done"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>