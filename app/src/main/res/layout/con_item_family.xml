<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/size_item_family"
    android:layout_height="@dimen/size_item_family"
    android:layout_margin="3dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/ivFamMemberProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/icon_add_family_group"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvFamMemberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_fam_heads_name"
            android:padding="5dp"
            android:text="@string/app_name"
            android:singleLine="true"
            android:textSize="@dimen/fontsize_small"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>