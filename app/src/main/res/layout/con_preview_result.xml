<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Result"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="54dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="198dp"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Family Member Name"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="54dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Food Allergen Found"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtPersonName"
        android:layout_width="198dp"
        android:layout_height="565dp"
        android:layout_marginTop="170dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtFoodAllergen"
        android:layout_width="211dp"
        android:layout_height="561dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="170dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:text="This result will came up on the food allergen scanned on a product. It will automatically display the person(s) who have a certain allergy found in the product."
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:padding="10dp"
        android:text="Names on the list with food allergen found present in the scanned products, should be prohibited to consume the product."
        android:textAlignment="center"
        android:textSize="12sp" />

</RelativeLayout>
